<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_converter__mensagem"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.paulo.myapplicationrsa.Converter_Mensagem">

<TextView
    android:text="Digite a mensagem:"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CM_Text1"
    android:textColor="#fff"
    android:textAlignment="center"
    android:layout_alignParentTop="true"
    android:layout_marginTop="10dp"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/CM_Text1"
    android:id="@+id/CM_EditText1"
    android:background="#9C9C9C"
    android:layout_marginTop="17dp"
    android:layout_alignParentStart="true"/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Criptografar"
    android:layout_below="@+id/CM_EditText1"
    android:layout_alignParentStart="true"
    android:layout_marginTop="21dp"
    android:id="@+id/CM_button1"/>

<ListView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/CM_button1"
    android:id="@+id/CM_ListView1"
    android:background="#9C9C9C"
    android:layout_marginTop="17dp"
    android:layout_alignParentStart="true"/>

<TextView
    android:text="Digite a criptografia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CM_Text2"
    android:textColor="#fff"
    android:textAlignment="center"
    android:layout_alignParentStart="true"
    android:layout_marginTop="50dp"
    android:layout_below="@id/CM_ListView1"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/CM_Text2"
    android:id="@+id/CM_EditText2"
    android:background="#9C9C9C"
    android:layout_marginTop="17dp"
    android:layout_alignParentStart="true"/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Descriptografar"
    android:layout_below="@+id/CM_EditText2"
    android:layout_alignParentStart="true"
    android:layout_marginTop="21dp"
    android:id="@+id/CM_button2"/>

<ListView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/CM_button2"
    android:id="@+id/CM_ListView2"
    android:background="#9C9C9C"
    android:layout_marginTop="17dp"
    android:layout_alignParentStart="true"/>

</RelativeLayout>
