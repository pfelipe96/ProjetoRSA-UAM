<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_criptografia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.paulo.myapplicationrsa.Criptografia">


    <TextView
        android:text="Insira o número N:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/C_Text1"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="#9C9C9C"
        android:id="@+id/C_Edit1"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/C_Text1"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Insira o número E:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/C_Text2"
        android:layout_below="@+id/C_Edit1"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="#9C9C9C"
        android:id="@+id/C_Edit2"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/C_Text2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Qual é a palavra para criptografar:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/C_Text3"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/C_Edit2"
        android:layout_alignParentStart="true" />


        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:background="#9C9C9C"
        android:id="@+id/C_Edit3"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/C_Text3"
        android:layout_alignParentStart="true"
        android:breakStrategy="high_quality" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Números da criptografia:"
        android:textColor="#fff"
        android:id="@+id/C_Text4"
        android:layout_below="@+id/C_Edit3"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true"/>

    <ListView
        android:layout_width="match_parent"
        android:background="#9C9C9C"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/C_output"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/C_Text4" />

    <Button
        android:text="Calcular"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/C_button1"
        android:layout_alignParentBottom="true"
        android:cursorVisible="false"
        android:elegantTextHeight="true"
        android:enabled="true" />


</RelativeLayout>


